<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b10"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                app:srcCompat="@drawable/logo" />


            <TextView
                android:id="@+id/fields_Error"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/fields_error"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/user_email"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_33sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/field"
                android:ems="10"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/email_Error"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/email_error"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/username"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_33sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/field"
                android:ems="10"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:hint="@string/username"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/name_Error"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/name_error"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_33sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/field"
                android:ems="10"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/pass_error"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/pass_Error_numchar"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/confirmpass"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="@dimen/_33sdp"
                android:layout_gravity="center"
                android:background="@drawable/field"
                android:ems="10"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/confirm_Error"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/confirm_error"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="@dimen/_225sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:textSize="@dimen/_11ssp"
                android:text="@string/show_password" />

            <LinearLayout
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:gravity="center|left"
                    android:text="@string/gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"/>

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abhaya_libre_semibold"
                        android:text="@string/male"
                        android:textSize="@dimen/_14ssp" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/abhaya_libre_semibold"
                        android:text="@string/female"
                        android:textSize="@dimen/_14ssp" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/gender_error"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/gender_error"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:gravity="center|left"
                    android:text="@string/role"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <Spinner
                    android:id="@+id/rolesp"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner"
                    android:entries="@array/roleMenu"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:paddingLeft="@dimen/_7sdp"
                    android:paddingRight="@dimen/_30sdp"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/_14ssp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/role_error"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/role_error"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/create"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/button"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/create_account"
                android:textAllCaps="false"
                android:textSize="@dimen/_18ssp"
                app:backgroundTintMode="multiply" />

            <LinearLayout
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:gravity="right"
                    android:text="Already have an account?"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/go2login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:text="Sign in"
                    android:textColor="#01579B"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>


    </RelativeLayout>

</ScrollView>