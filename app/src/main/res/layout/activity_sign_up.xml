<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/b10"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/sign_up"
                android:textSize="@dimen/_28ssp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_20sdp"
                app:boxCornerRadiusTopEnd="@dimen/_20sdp"
                app:boxCornerRadiusBottomStart="@dimen/_20sdp"
                app:boxCornerRadiusTopStart="@dimen/_20sdp"
                app:errorEnabled="true"
                app:startIconTint="#71A562"
                app:startIconDrawable="@drawable/ic_baseline_email_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/abhaya_libre_semibold"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_9sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_20sdp"
                app:boxCornerRadiusTopEnd="@dimen/_20sdp"
                app:boxCornerRadiusBottomStart="@dimen/_20sdp"
                app:boxCornerRadiusTopStart="@dimen/_20sdp"
                app:errorEnabled="true"
                app:startIconTint="#71A562"
                app:startIconDrawable="@drawable/ic_baseline_person_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:inputType="textPersonName"
                    android:hint="@string/username"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/abhaya_libre_semibold"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_9sdp"
                app:endIconMode="password_toggle"
                app:boxCornerRadiusBottomEnd="@dimen/_20sdp"
                app:boxCornerRadiusTopEnd="@dimen/_20sdp"
                app:boxCornerRadiusBottomStart="@dimen/_20sdp"
                app:boxCornerRadiusTopStart="@dimen/_20sdp"
                app:errorEnabled="true"
                app:startIconTint="#71A562"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:helperTextEnabled="true"
                app:helperText="@string/pass_error">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/abhaya_libre_semibold"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmpass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:endIconMode="password_toggle"
                app:boxCornerRadiusBottomEnd="@dimen/_20sdp"
                app:boxCornerRadiusTopEnd="@dimen/_20sdp"
                app:boxCornerRadiusBottomStart="@dimen/_20sdp"
                app:boxCornerRadiusTopStart="@dimen/_20sdp"
                app:errorEnabled="true"
                app:startIconTint="#71A562"
                app:startIconDrawable="@drawable/ic_baseline_lock_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:inputType="textPassword"
                    android:hint="@string/confirm_password"
                    android:textSize="@dimen/_15ssp"
                    android:fontFamily="@font/abhaya_libre_semibold"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:gravity="center|start"
                    android:text="@string/gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"/>

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abhaya_libre_semibold"
                        android:text="@string/male"
                        android:textSize="@dimen/_14ssp" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/abhaya_libre_semibold"
                        android:text="@string/female"
                        android:textSize="@dimen/_14ssp" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/gender_error"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/gender_error"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:gravity="center|start"
                    android:text="@string/role"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <Spinner
                    android:id="@+id/rolesp"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner"
                    android:entries="@array/roleMenu"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_30sdp"
                    android:spinnerMode="dropdown"
                    android:textSize="@dimen/_14ssp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/role_error"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/role_error"
                android:textColor="#AA1616"
                android:textSize="@dimen/_11ssp"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/create"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button"
                android:fontFamily="@font/abhaya_libre_semibold"
                android:text="@string/create_account"
                android:textAllCaps="false"
                android:textSize="@dimen/_18ssp"
                app:backgroundTintMode="multiply" />

            <LinearLayout
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:gravity="end"
                    android:text="@string/already_have_an_account"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/go2login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/abhaya_libre_semibold"
                    android:text="@string/sign_in"
                    android:textColor="#006064"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar_signUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>

</ScrollView>